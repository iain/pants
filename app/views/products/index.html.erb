<p id="notice"><%= notice %></p>

<h1>Jeans for All of Us</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= image_tag(product.photo.thumb.url) %></td>
        <td><%= link_to 'More Info', product, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>